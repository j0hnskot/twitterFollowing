{
    "name": "Twitter Follower Farm",
    "version": "0.0.1",
    "description": "Tools to quickly follow/unfollow people on Twitter",
    "manifest_version": 3,
    "author": "John Skoteiniotis",
    "permissions": ["storage", "activeTab", "scripting", "webNavigation"],
    "host_permissions": ["https://twitter.com/*"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
      }
}